###jobs
vi job.yml
###########
apiVersion: batch/v1
kind: Job
metadata:
  name: node-app-job
spec:
  template:
    spec:
      containers:
      - name: node-app-job
        image: alpine
        command: ["echo","welcome to my node app"]
      restartPolicy: Never
####kubectl apply -f job.yml
kubectl get pod
######
job with completion and parralelisim
####################
apiVersion: batch/v1
kind: Job
metadata:
  name: node-app-job
spec:
  completions: 2
  parallelism: 2
  template:
    spec:
      containers:
      - name: node-app-job
        image: alpine
        command: ["echo","welcome to my node app"]
      restartPolicy: Never
      
